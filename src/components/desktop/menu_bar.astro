<script>
    function updateClock() {
        const now = new Date();
        const options: Intl.DateTimeFormatOptions = { weekday: 'short', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric',  };
        const timeString = now.toLocaleTimeString('en-US', options).replace(',', '');
        const clockElement = document.getElementById('macos-clock');
        if (clockElement) {
            clockElement.textContent = timeString;
        }
    }
    setInterval(updateClock, 1000);
    updateClock();
</script>
