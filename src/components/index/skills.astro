<section id="skills" class="py-12">
    <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl font-bold tracking-tight">Skills</h2>
    </div>

    <!-- Masonry-like grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        
        <!-- Programming Languages -->
        <div class="bg-white/50 dark:bg-white/5 border border-white/60 dark:border-white/10 p-6 rounded-[24px] shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
                Programming Languages
            </h3>
            <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-yellow-100 text-yellow-800">JavaScript</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-purple-100 text-purple-800">C#</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-blue-100 text-blue-800">Python</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-cyan-100 text-cyan-800">Golang</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-indigo-100 text-indigo-800">PHP</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-red-100 text-red-800">Java</span>
            </div>
        </div>

        <!-- Web Development -->
        <div class="bg-white/50 dark:bg-white/5 border border-white/60 dark:border-white/10 p-6 rounded-[24px] shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                Web Development
            </h3>
            <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-orange-100 text-orange-800">HTML5</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-purple-100 text-purple-800">ASP.NET Core</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-purple-100 text-purple-800">MVC</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-red-100 text-red-800">Angular</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-sky-100 text-sky-800">React</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-green-100 text-green-800">Node.js</span>
            </div>
        </div>

        <!-- Frameworks & Platforms -->
        <div class="bg-white/50 dark:bg-white/5 border border-white/60 dark:border-white/10 p-6 rounded-[24px] shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                Frameworks
            </h3>
            <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-purple-100 text-purple-800">.NET Framework</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-purple-100 text-purple-800">.NET Core</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-cyan-100 text-cyan-800">Flutter</span>
            </div>
        </div>

        <!-- Databases -->
        <div class="bg-white/50 dark:bg-white/5 border border-white/60 dark:border-white/10 p-6 rounded-[24px] shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                Databases
            </h3>
            <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-red-100 text-red-800">SQL Server</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-blue-100 text-blue-800">PostgreSQL</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-orange-100 text-orange-800">MySQL</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-red-100 text-red-800">Oracle DB</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-sky-100 text-sky-800">SQLite</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-red-100 text-red-800">Redis</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-gray-100 text-gray-800">JSON</span>
            </div>
        </div>

        <!-- Cloud & DevOps -->
        <div class="bg-white/50 dark:bg-white/5 border border-white/60 dark:border-white/10 p-6 rounded-[24px] shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                Cloud & DevOps
            </h3>
            <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-blue-100 text-blue-800">Azure</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-blue-100 text-blue-800">Blob Storage</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-amber-100 text-amber-800">functions</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-blue-100 text-blue-800">Azure DevOps</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-sky-100 text-sky-800">Docker</span>
            </div>
        </div>

        <!-- Mobile Development -->
         <div class="bg-white/50 dark:bg-white/5 border border-white/60 dark:border-white/10 p-6 rounded-[24px] shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                Mobile
            </h3>
            <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-green-100 text-green-800">Android</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-cyan-100 text-cyan-800">Flutter</span>
            </div>
        </div>

         <!-- System Admin -->
         <div class="bg-white/50 dark:bg-white/5 border border-white/60 dark:border-white/10 p-6 rounded-[24px] shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                System Admin
            </h3>
            <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-blue-100 text-blue-800">Windows Server</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-gray-100 dark:bg-white/5 text-gray-800 dark:text-gray-200">Linux Server</span>
            </div>
        </div>

        <!-- Machine Learning -->
        <div class="bg-white/50 dark:bg-white/5 border border-white/60 dark:border-white/10 p-6 rounded-[24px] shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                Machine Learning
            </h3>
            <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-yellow-100 text-yellow-800">Python ML</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-purple-100 text-purple-800">ML.NET</span>
            </div>
        </div>

        <!-- Quality & Methodologies -->
        <div class="bg-white/50 dark:bg-white/5 border border-white/60 dark:border-white/10 p-6 rounded-[24px] shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                Quality & Agile
            </h3>
            <div class="flex flex-wrap gap-2">
                 <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-green-100 text-green-800">Unit Testing</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-green-100 text-green-800">TDD</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-teal-100 text-teal-800">Agile</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-teal-100 text-teal-800">Full Stack</span>
                <span class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-teal-100 text-teal-800">API Integration</span>
            </div>
        </div>

    </div>
</section>