<aside class="hidden md:flex w-[280px] h-full flex-col bg-white/40 backdrop-blur-3xl border-r border-white/20 select-none">
    <!-- Window Traffic Lights (Simulated) -->
    <div class="h-14 flex items-center px-5 gap-2">
        <div class="w-3 h-3 rounded-full bg-[#FF5F57] shadow-sm"></div>
        <div class="w-3 h-3 rounded-full bg-[#FEBC2E] shadow-sm"></div>
        <div class="w-3 h-3 rounded-full bg-[#28C840] shadow-sm"></div>
    </div>

    <!-- User Profile / Branding -->
    <div class="px-5 mb-8">
        <div class="flex items-center gap-3">
            <img src="/images/logo.png" alt="Profile" class="w-10 h-10 rounded-full shadow-md object-contain bg-white/50" />
            <div class="flex flex-col">
                <span class="font-bold text-gray-800 text-sm leading-tight">DEMG-DEV</span>
                <span class="text-xs text-gray-500 font-medium">Architect</span>
