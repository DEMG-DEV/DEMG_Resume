            <a href="#projects" class="flex items-center gap-3 px-2 py-2 rounded-lg hover:bg-black/5 transition-colors group">
                 <div class="w-7 h-7 rounded-[8px] bg-purple-500 text-white flex items-center justify-center shadow-sm group-hover:scale-105 transition-transform">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path></svg>
                </div>
                <span>Projects</span>
            </a>
            <a href="#skills" class="flex items-center gap-3 px-2 py-2 rounded-lg hover:bg-black/5 transition-colors group">
                 <div class="w-7 h-7 rounded-[8px] bg-orange-500 text-white flex items-center justify-center shadow-sm group-hover:scale-105 transition-transform">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                </div>
                <span>Skills</span>
            </a>
            <a href="#work" class="flex items-center gap-3 px-2 py-2 rounded-lg hover:bg-black/5 transition-colors group">
                 <div class="w-7 h-7 rounded-[8px] bg-green-500 text-white flex items-center justify-center shadow-sm group-hover:scale-105 transition-transform">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"></path></svg>
