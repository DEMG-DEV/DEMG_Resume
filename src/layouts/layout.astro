---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import "../pages/index.css";
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href="/images/logo.png" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        
        <!-- Primary Meta Tags -->
        <title>DEMG-DEV | Full Stack Solutions Architect</title>
        <meta name="title" content="DEMG-DEV | Full Stack Solutions Architect" />
        <meta name="description" content="Senior Full Stack Developer specialized in transforming complex business requirements into robust .NET & Cloud architectures. Efficiency, reliability, and high-impact digital solutions." />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://demg-dev.com/" />
        <meta property="og:title" content="DEMG-DEV | Full Stack Solutions Architect" />
        <meta property="og:description" content="Senior Full Stack Developer specialized in transforming complex business requirements into robust .NET & Cloud architectures." />
        <meta property="og:image" content="/images/logo.png" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content="https://demg-dev.com/" />
        <meta property="twitter:title" content="DEMG-DEV | Full Stack Solutions Architect" />
        <meta property="twitter:description" content="Senior Full Stack Developer specialized in transforming complex business requirements into robust .NET & Cloud architectures." />
        <meta property="twitter:image" content="/images/logo.png" />
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
